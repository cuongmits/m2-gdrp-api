<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="toom_general">
            <tab>toom</tab>
            <group id="customer_data_request" translate="label" type="text" sortOrder="100" showInDefault="1">
                <label>Customer Data Request</label>
                <field id="customer_data_response_limit" translate="label" type="text" sortOrder="100" showInDefault="1">
                    <label>Customer Data Response Limit</label>
                    <comment><![CDATA[Limit of number of responding data set for a customer data request, 1000 by default.]]></comment>
                    <can_be_empty>1</can_be_empty>
                </field>
            </group>
        </section>
    </system>
</config>
